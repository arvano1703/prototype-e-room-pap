        <form id="cancelForm" method="POST" action="https://script.google.com/macros/s/AKfycbxuJ0yB8QJ7qE7UcW8zA2lD2s5lN9eQvZw9w8hCRHGmoG9Wp5uBO6mO/exec">
            <input type="hidden" name="action" value="cancel">
            <label for="idPemesanan">ID Pemesanan</label>
            <input type="text" id="idPemesanan" name="idPemesanan" required placeholder="Masukkan ID Pemesanan Anda">

            <button type="submit" id="cancelBtn">Batalkan Pesanan</button>
        </form>

        <div id="bookingList">
            <table id="bookingTable">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Tanggal</th>
                        <th>Waktu</th>
                        <th>Ruangan</th>
                        <th>ID</th>
                        <th>WhatsApp</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
